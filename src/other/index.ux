<template>
  <div id="other">
    <div class="type-list">
      <block for="{{typeList}}">
        <div class="type-item" @click="getListByType($item.tab)">
          <image class="type-img" src="../Common/{{$item.icon}}.png" />
          <text class="type-text">{{$item.name}}</text>
        </div>
      </block>
    </div>
    <div class="content-list">
      <refresh @refresh="refreshList" refreshing="{{isRefreshing}}">
        <list class="list">
          <block for="{{contentInfo.list}}">
            <list-item type="contentItem" class="content-item" @click="goWebView($item)">
              <image class="item-img" src="../Common/meizi.jpeg" if="{{!$item.images}}" />
              <image class="item-img" src="{{$item.images[0]}}" else/>
              <div class="item-row ">
                <text class="item-title ">{{$item.desc}}</text>
                <text class="item-info ">类型：{{$item.type}} 作者：{{$item.who}}</text>
              </div>
            </list-item>
          </block>
        </list>
      </refresh>
    </div>
  </div>
</template>
<style lang="less" scoped>
#other {
  font-size: 16px;
  display: flex;
  flex-direction: column;
  .type-list {
    display: flex;
    width: 100%;
    padding: 20px;
    justify-content: flex-start;
    flex-wrap: wrap;
    border-style: solid;
    border-color: #000000;
