<script>
export default {
  data: {
    typeList: [
      {
        name: 'Android',
        icon: 'android',
        tab: 'Android'
      },
      {
        name: 'iOS',
        icon: 'ios',
        tab: 'iOS'
      },
      {
        name: '前端',
        icon: 'fe',
        tab: '前端'
      },
      {
        name: 'App',
        icon: 'app',
        tab: 'App'
      },
      {
        name: '休息视频',
        icon: 'video',
        tab: '休息视频'
      },
      {
        name: '瞎推荐',
        icon: 'xiatuijian',
        tab: '瞎推荐'
      },
      {
        name: '拓展资源',
        icon: 'ziyuan',
        tab: '拓展资源'
      }
    ],
    contentInfo: {
      list: [],
      hasMore: true
    },
    type: 'all',
    pageSize: 10,
    page: 1,
    isRefreshing: false
  },
  onInit() {
    this.getList()
    this.$page.setTitleBar({ text: '其他' })
  },
  refreshList(evt) {
    this.isRefreshing = evt.refreshing
    this.getList()
  },
  getListByType(name) {
    console.log(name)
    this.type = name
    this.page = 1
    this.getList()
  },
  getList() {
    this.$app.$def.fetch.fetch({
      url: `http://gank.io/api/data/${this.type}/${this.pageSize}/${this.page}`,
      success: data => {
        if (this.isRefreshing) {
          this.$app.$def.prompt.showToast({
            message: '刷新成功'
          })
          this.isRefreshing = false
        }
        const results = JSON.parse(data.data).results
        if (results.length <= 0) {
          this.contentInfo.hasMore = false
        } else {
          if (this.page <= 1) {
            this.contentInfo.list = []
          }
          this.contentInfo.list.push(...results)
        }
      },
      fail: (error, code) => {
        console.log('handling fail, error=' + error)
        console.log('handling fail, code=' + code)
      }
    })
  },
  goWebView(itemInfo) {
    console.log(itemInfo.desc)
    console.log(itemInfo.url)
    this.$app.$def.router.push({
      uri: '/WebView',
      params: {
        title: itemInfo.desc,
        url: itemInfo.url
      }
    })
  }
}
</script>

